{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}